
body {
	
	img {
   
    max-width: 100%;
    height: 5px;
    border: none;
	border-radius: 8px;
    display: none;
    margin: 20px auto;
    padding: 5px;
	
	
    
    
}

    font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; 
    padding: 0; 
    background-color: #f4f3ee; 
    color: #000000; 
    text-align: center;
    position: relative;
    min-height: 100vh;
    line-height: 1.6;
}

.content-container {
    max-width: 1000px; 
    margin: 0 auto;
    padding: 20px;
}

h1, h2 {
    font-family: 'Inter', sans-serif; 
    font-weight: 700;
    color: #055381; 
    margin-bottom: 25px;
    padding-top: 20px; 
    text-transform: uppercase;
    letter-spacing: 2px;
}

photo.img{ 
	  
}

.intro-text {
    font-size: 1.2rem; 
    max-width: 800px; 
    margin: 20px auto 60px auto;
    color:#055381;
}

p, a {
    color: #000000;
}


.logo {
    position: fixed; 
    top: 5px;
    left: 20px;
    width: 75px; 
    height: 100px;
    z-index: 100; 
    border-radius: 4px; 
}
.logo img {
    width: 75%;
    height: 50px;
    top: 5px;
	
}


nav {
    position: sticky; 
    top: 0;
    background-color:#000000; 
    padding: 20px 0;
    border-bottom: 1px solid #333333;
    z-index: 50; 
    margin-bottom: 0; 
}
nav a {
    color: #ffffff; 
    text-decoration: none;
    margin: 0 25px;
    font-weight: 500;
    font-size: 1em;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: color 0.3s;
}
nav a:hover {
    color: #4CAF50; 
}


.header-section {
    padding: 20px 0;
    margin-bottom: 40px;
}


.page-section {
    padding: 80px 20px; 
    border-top: 5px solid #222222; 
}


#home-page {
    border-top: none; 
}

.home-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); 
    gap: 15px; 
    margin: 40px auto 30px auto;
}
.home-gallery-item {
    overflow: hidden;
    position: relative; 
    transition: all 0.4s ease;
}
.home-gallery-item:hover {
    transform: scale(0.98); 
    box-shadow: 0 50px 30px rgba(0, 0, 0, 0.7);
}
.home-gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: fill;
    display: block;
    transition: filter 0.4s;
}


.portfolio-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px; 
    padding: 20px 0;
}

.photo-link {
    text-decoration: none;
    display: block;
    color: inherit;
    position: relative; 
}

.photo {
   
    background-color: transparent; 
    border-radius: 4px; 
    padding: 0; 
    transition: transform 0.4s, box-shadow 0.4s;
    overflow: hidden;
    position: relative;
    height: 100%; 
}

.photo-link:hover .photo {
    transform: scale(1.02); 
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.7);
}

.photo img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 4px; 
    filter: brightness(0.9);
    transition: filter 0.4s;
}

.photo-link:hover .photo img {
    filter: brightness(0.7);
}


.caption {
    position: absolute;
    bottom: 0;
    left: 50;
    right: 0;
   
    background: rgba(0, 0, 0, 0.85); 
    padding: 15px;
    margin: 0; 
    font-size: 0.9em;
    font-weight: 600;
    color: #efefefefefe; 
    transform: translateY(100%); 
    transition: transform 0.4s ease-out;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.photo-link:hover .caption {
    transform: translateY(0);
}


table {
    width: 95%;
    max-width: 700px;
    margin: 40px auto 0 auto;
    border-collapse: collapse;
    border-radius: 4px;
    overflow: hidden; 
}
th{
    border: 1px solid #333333;
    padding: 15px; 
    text-align: left;
    font-weight: 300;
	font-color: white;
	
}
th {
    background-color: #222222;
    color: white;
    text-align: center;
    font-weight: 600;
    text-transform: uppercase;
}


form {
    max-width: 1000px; 
    margin: 30px auto 0 auto; 
    padding: 40px;
    background-color: #1a1a1a; 
    border-radius: 4px;
    text-align: left;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
}
label, input, textarea {
    display: block;
    width: 100%;
    margin-bottom: 20px;
    font-weight: 500;
    color: #eeeeee;
}
input[type="text"], input[type="email"], textarea {
    padding: 15px;
    border: 1px solid #444444; 
    border-radius: 4px;
    color: #efefefe; 
    background-color: #2a2a2a; 
    font-size: 1em;
}
textarea {
    resize: horizontal;
    min-height: 150px;
}
button {
    padding: 15px 30px;
    background-color:#065381; 
    color:#FFFEFF;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}
button:hover {
    background-color: #065381; 
}


.back-to-top {
    position: fixed;
    bottom: 25px; 
    background-color: #055381; 
    color: #FFFEFF; 
    text-decoration: none;
    padding: 15px 20px; 
    border-radius: 50%; 
    font-size: 20px;
    line-height: 1;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.6);
    transition: background-color 0.3s, transform 0.2s;
    z-index: 1000;
}
.back-to-top:hover {
    background-color: #000000; 
    transform: scale(1.1);
}